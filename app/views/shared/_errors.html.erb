<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <div class="card card-danger">
      <div class="card-heading">
          <h2 class="card-title">
            <%= pluralize(obj.errors.count,"error")%>
          </h2>
      </div>
      <div class="card-body">
        <ul>
           <% obj.errors.full_messages.each do |msg| %>
            <li>
              <%= msg%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    </div>
  </div>
<% end %>